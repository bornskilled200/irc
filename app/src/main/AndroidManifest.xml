<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.unseenspace.irc" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.Light" >
        <activity
            android:name="com.unseenspace.irc.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.unseenspace.irc.ShootActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.unseenspace.irc.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.unseenspace.irc.MainActivity"/>
        </activity>
        <activity
            android:name="com.unseenspace.irc.SettingsActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.unseenspace.irc.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.unseenspace.irc.MainActivity"/>
        </activity>
    </application>

</manifest>
