    <style name="AppTheme.Light.Purple">
        <item name="colorPrimary">@color/purplePrimary</item>
        <item name="colorPrimaryDark">@color/purplePrimaryDark</item>
        <item name="colorAccent">@color/purpleAccent</item>
        <!--In use when Cards are relevant
        <item name="cardStyle">@style/CardView.Light</item>-->
        <!--<item name="theme">@style/ThemeOverlay.AppCompat.ActionBar</item>-->
    </style>

    <style name="TextAppearance.Item.Title" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Item.Subtitle" parent="TextAppearance.AppCompat.Small">

    </style>
